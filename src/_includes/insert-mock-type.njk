<div class="builder-btn">
  <button
    type="button"
    class="btn btn-insert-mock"
    @click="$store.data.showInsertTypes = !$store.data.showInsertTypes"
  >
    + Insert Mock Type
  </button>
  <div class="popup" :class="$store.data.showInsertTypes && 'open'">
    <div class="popup-content">
      <div class="popup-search">
        <input type="search" placeholder="Search" />
      </div>
      <div class="popup-section">
        <template x-for="option in $store.data.falso" :key="option.text">
          <button type="button" x-text="option.text" @click="insertFalsoBlock(option)"></button>
        </template>
      </div>
      {#
      <div class="popup-section">
        <h2>Text</h2>
        <button type="button">Sentences</button>
        <button type="button">Title</button>
        <button type="button">Text</button>
      </div>
      #}
    </div>
  </div>
</div>
